@model ApplicationUser

@{ 
    ViewBag.PageTitle = "My Summary";
    DateTime current = DateTime.Now;
} 

<h1>@ViewBag.PageTitle</h1>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Personal/Vacation Days Left</th>
                <td>@Model.VacationDaysLeft days</td>
            </tr>
            <tr>
                <th>Personal/Vacation Days Used</th>
                <td>@Model.VacationDaysUsed days</td>
            </tr>
            <tr>
                <th>@(current.Year+1) Days Left</th>
                <td>@Model.NextYearVacationDaysLeft days</td>
            </tr>
            <tr>
                <th>@(current.Year+1) Days Used</th>
                <td>@Model.NextYearVacationDaysLeft days</td>
            </tr>
            <tr>
                <th>Sick Days Left</th>
                <td>@Model.SickDaysLeft days</td>
            </tr>
            <tr>
                <th>Sick Days Used</th>
                <td>@Model.SickDaysUsed days</td>
            </tr>
        </tbody>
    </table>
</div>

