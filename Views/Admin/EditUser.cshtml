@model EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

<h1>Edit User</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" disabled class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="VacationDaysLeft" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="VacationDaysLeft" class="form-control">
            <span asp-validation-for="VacationDaysLeft" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="VacationDaysUsed" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="VacationDaysUsed" class="form-control">
            <span asp-validation-for="VacationDaysUsed" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="SickDaysLeft" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="SickDaysLeft" class="form-control">
            <span asp-validation-for="SickDaysLeft" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="SickDaysUsed" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="SickDaysUsed" class="form-control">
            <span asp-validation-for="SickDaysUsed" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ListUsers" class="btn btn-warning">Cancel</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>User Roles</h3>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManageUserRoles" asp-route-userId="@Model.Id" class="btn btn-primary">Manage Roles</a>
        </div>
    </div>
</form>
