@model CreateERViewModel
@{
    ViewBag.PageTitle = "New Adjustment";
    DateTime current = DateTime.Now;
}
<h1>@ViewBag.PageTitle</h1>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="EarlyRelease" asp-action="Create" method="post" onsubmit="submitRequest.disabled = true; submitRequest.value = 'Please Wait...'; return true;">
    <div class="form-group">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="AdjustmentType" value="Show Up Late" id="check1" />
            <label class="form-check-label" asp-for="AdjustmentType" for="check1">Showing Up Late</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="AdjustmentType" value="Leave Early" id="check2" />
            <label class="form-check-label" asp-for="AdjustmentType" for="check2">Leaving Early</label>
        </div>
    </div>
    <div class="row">
        <div class="form-group col">
            <label asp-for="AdjustmentDate">Date</label>
            <input asp-for="AdjustmentDate" class="form-control" min="@current.ToString("yyyy-MM-dd")" max="@(current.Year+1)-12-31" />
            <span asp-validation-for="AdjustmentDate" class="text-danger"></span>
        </div>
        <div class="form-group col">
            <label asp-for="AdjustmentTime">When you're leaving/arriving</label>
            <select asp-for="AdjustmentTime" class="form-control">
                <option>9:00 AM</option>
                <option>9:15 AM</option>
                <option>9:30 AM</option>
                <option>9:45 AM</option>
                <option>10:00 AM</option>
                <option>10:15 AM</option>
                <option>10:30 AM</option>
                <option>10:45 AM</option>
                <option>11:00 AM</option>
                <option>11:15 AM</option>
                <option>11:30 AM</option>
                <option>11:45 AM</option>
                <option>12:00 PM</option>
                <option>12:15 PM</option>
                <option>12:30 PM</option>
                <option>12:45 PM</option>
                <option>1:00 PM</option>
                <option>1:15 PM</option>
                <option>1:30 PM</option>
                <option>1:45 PM</option>
                <option>2:00 PM</option>
                <option>2:15 PM</option>
                <option>2:30 PM</option>
                <option>2:45 PM</option>
                <option>3:00 PM</option>
                <option>3:15 PM</option>
                <option>3:30 PM</option>
                <option>3:45 PM</option>
                <option>4:00 PM</option>
                <option>4:15 PM</option>
                <option>4:30 PM</option>
                <option>4:45 PM</option>
                <option>5:00 PM</option>
                <option>5:15 PM</option>
                <option>5:30 PM</option>
                <option>5:45 PM</option>
            </select>
            <span asp-validation-for="AdjustmentTime" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Reason">Reason (if you want to provide)</label>
        <input asp-for="Reason" class="form-control" />
        <span asp-validation-for="Reason" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" value="Submit ER" name="submitRequest" />
</form>
