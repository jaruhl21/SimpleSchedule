@model EditHolidayViewModel

@{
    ViewBag.PageTitle = "Edit Holiday: " + @Model.DateOfHoliday.ToShortDateString();
}

<h1>@ViewBag.PageTitle</h1>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="Holiday" asp-action="Edit" method="post">
    <input hidden asp-for="@Model.HolidayID" />
    <input hidden asp-for="@Model.PreviousDate" />
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="DateOfHoliday">Date</label>
                <input asp-for="DateOfHoliday" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                <span asp-validation-for="DateOfHoliday" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="NameOfHoliday">Name</label>
                <input asp-for="NameOfHoliday" class="form-control" />
                <span asp-validation-for="NameOfHoliday" class="text-danger"></span>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-controller="Request" asp-action="index" class="btn btn-warning">Cancel</a>
</form>