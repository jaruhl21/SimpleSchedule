@model Request
@{
    ViewBag.PageTitle = "Call In SIck";
    DateTime current = DateTime.Now;
}
<h1>@ViewBag.PageTitle</h1>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="Request" asp-action="CallInSickFull" method="post" onsubmit="submitRequest.disabled = true; submitRequest.value = 'Please Wait...'; return true;">
    <div class="form-group">
        <label asp-for="StartDate">Date</label>
        <input asp-for="StartDate" class="form-control" min="@current.ToString("yyyy-MM-dd")" max="@(current.Year+1)-12-31" value="@current.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="SpecialCase" value="Sick Day" id="check1" checked />
            <label class="form-check-label" asp-for="SpecialCase" for="check1">Sick Day</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="SpecialCase" value="Unpaid Personal/Vacation (Sick)" id="check2" />
            <label class="form-check-label" asp-for="SpecialCase" for="check2">Unpaid Personal/Vacation (Sick)</label>
            <span asp-validation-for="SpecialCase" class="text-danger"></span>
        </div>
    </div>
    <input type="submit" class="btn btn-primary" value="Submit Sick Day" name="submitRequest" />
</form>
